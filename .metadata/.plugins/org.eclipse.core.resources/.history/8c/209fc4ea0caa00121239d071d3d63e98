package org.exemple.impls;


import java.util.Hashtable;

import org.deviceservice.api.DeviceService;
import org.osgi.framework.BundleActivator;
import org.osgi.framework.BundleContext;
import org.osgi.framework.ServiceRegistration;

import com.phidgets.TemperatureSensorPhidget;
import com.phidgets.event.AttachEvent;
import com.phidgets.event.AttachListener;
import com.phidgets.event.DetachEvent;
import com.phidgets.event.DetachListener;
import com.phidgets.event.ErrorEvent;
import com.phidgets.event.ErrorListener;
import com.phidgets.event.TemperatureChangeEvent;
import com.phidgets.event.TemperatureChangeListener;

public class Activator implements BundleActivator{

	BundleContext bc= null;
	@Override
	public void start(BundleContext context) throws Exception {
		bc = context;
		Hashtable<String,String> prop = new Hashtable<String,String>();
		/*Prop of the service ShowTempratureCelsius*/
		prop.put("Name", "Temperatura ¼C");
		/*Service Registration of ShowTempratureCelsius*/
		ServiceRegistration celsiusTemp; = bc.registerService(DeviceService.class.getName(), new ShowTempratureCelsius(), prop);
		
		
		TemperatureSensorPhidget tempsensor;
		tempsensor = new TemperatureSensorPhidget();
		tempsensor.addAttachListener(new AttachListenerDevice());
		tempsensor.addDetachListener(new AttachListenerDevice());
		
		tempsensor.addErrorListener(new ErrorListener() {
			public void error(ErrorEvent ee) {
				System.out.println("error event for " + ee);
			}
		});
		tempsensor.addTemperatureChangeListener(new TemperatureChangeListenerDevice()
		{
			public void temperatureChanged(TemperatureChangeEvent oe)
			{
				System.out.println(oe);
			}
		});
		
				
	}

	@Override
	public void stop(BundleContext context) throws Exception {
		bc = null;
		
	}

}
